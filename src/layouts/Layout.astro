---
import type { CollectionEntry } from 'astro:content'
import BaseHead from '@components/partials/BaseHead.astro'
import Header from '@components/partials/Header.astro'
import Footer from '@components/partials/Footer.astro'
import FormattedDate from '@components/utilities/FormattedDate.astro'
import Container from '@components/utilities/Container.astro'

type Props = CollectionEntry<'blog'>['data']

const { title, description } = Astro.props
---

<html lang='en'>
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<Container class='py-4'>
			<slot />
		</Container>
		<Footer />
	</body>
</html>
